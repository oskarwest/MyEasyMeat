<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.QualifyProductFragment">

    <LinearLayout
        android:id="@+id/LinearLayoutStars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewStar1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_unselected_star"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imageViewStar2"/>

        <ImageView
            android:id="@+id/imageViewStar2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_unselected_star"
            app:layout_constraintStart_toEndOf="@+id/imageViewStar1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imageViewStar3"/>


        <ImageView
            android:id="@+id/imageViewStar3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_unselected_star"
            app:layout_constraintStart_toEndOf="@+id/imageViewStar2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imageViewStar4"/>


        <ImageView
            android:id="@+id/imageViewStar4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_unselected_star"
            app:layout_constraintStart_toEndOf="@+id/imageViewStar3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imageViewStar5"/>


        <ImageView
            android:id="@+id/imageViewStar5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_unselected_star"
            app:layout_constraintStart_toEndOf="@+id/imageViewStar4"
            app:layout_constraintTop_toTopOf="parent"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textViewQualify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUALIFY"
        android:textSize="40sp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LinearLayoutStars"/>

    <Button
        android:id="@+id/btnQualifyProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Calificar"
        android:background="@drawable/background_button_qualify"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewQualify"/>

    <ProgressBar
        android:id="@+id/progressBarQualifyProduct"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginVertical="10dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnQualifyProduct"/>

</androidx.constraintlayout.widget.ConstraintLayout>