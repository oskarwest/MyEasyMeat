<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BuyerFragment">


    <Button
        android:id="@+id/btnShops"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:background="@drawable/background_options_buyer"
        android:drawableLeft="@drawable/ic_baseline_shop_24"
        android:text="Tiendas"
        android:textColor="#000000"
        android:textSize="20sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btnQualify"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="Calificar"
        android:textSize="20sp"
        android:textColor="#000000"
        android:background="@drawable/background_options_buyer"
        android:drawableLeft="@drawable/ic_baseline_equalizer_24"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnShops" />

    <Button
        android:id="@+id/btnCart"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="Carrito"
        android:textSize="20sp"
        android:textColor="#000000"
        android:background="@drawable/background_options_buyer"
        android:drawableLeft="@drawable/ic_baseline_shopping_cart_24"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnQualify" />

</androidx.constraintlayout.widget.ConstraintLayout>